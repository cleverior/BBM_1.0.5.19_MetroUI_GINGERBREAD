    <TextView android:textSize="@dimen/list_dialog_item_text_size" android:textColor="@color/biru" android:layout_gravity="center_vertical" android:id="@id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" />
