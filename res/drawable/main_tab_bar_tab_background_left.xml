<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_activated="true">
        <layer-list>
            <item android:drawable="@color/biru2" />
        </layer-list>
    </item>
    <item android:state_pressed="false" android:state_activated="true">
        <layer-list>
            <item android:drawable="@color/abugelap" />
        </layer-list>
    </item>
    <item android:state_pressed="true" android:state_activated="false">
        <layer-list>
            <item android:drawable="@color/metro" />
        </layer-list>
    </item>
    <item android:state_pressed="false" android:state_activated="false">
        <layer-list>
            <item android:drawable="@color/abugelap" />
        </layer-list>
    </item>
</selector>