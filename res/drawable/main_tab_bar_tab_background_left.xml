<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_activated="true">
        <layer-list>
            <item android:drawable="@drawable/main_tab_bar_background_selected_gradient" />
            <item android:drawable="@drawable/main_tab_bar_tab_high_line" />
            <item android:drawable="@drawable/main_tab_bar_tab_pressed_left" />
        </layer-list>
    </item>
    <item android:state_pressed="false" android:state_activated="true">
        <layer-list>
            <item android:drawable="@drawable/main_tab_bar_background_selected_gradient" />
            <item android:drawable="@drawable/main_tab_bar_tab_high_line" />
        </layer-list>
    </item>
    <item android:state_pressed="true" android:state_activated="false">
        <layer-list>
            <item android:drawable="@drawable/main_tab_bar_background_unselected_gradient" />
            <item android:drawable="@drawable/main_tab_bar_tab_base_line" />
            <item android:drawable="@drawable/main_tab_bar_tab_pressed_left" />
        </layer-list>
    </item>
    <item android:state_pressed="false" android:state_activated="false">
        <layer-list>
            <item android:drawable="@drawable/main_tab_bar_background_unselected_gradient" />
            <item android:drawable="@drawable/main_tab_bar_tab_base_line" />
        </layer-list>
    </item>
</selector>