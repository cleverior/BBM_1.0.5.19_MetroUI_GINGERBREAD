<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:drawable="@drawable/main_tab_bar_background_unselected_gradient" />
            <item android:drawable="@drawable/main_tab_bar_tab_base_line" />
            <item android:drawable="@drawable/main_tab_bar_tab_pressed" />
        </layer-list>
    </item>
    <item android:state_pressed="false">
        <layer-list>
            <item android:drawable="@drawable/main_tab_bar_background_unselected_gradient" />
            <item android:drawable="@drawable/main_tab_bar_tab_base_line" />
        </layer-list>
    </item>
</selector>